<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity"
    android:gravity="center">

    <Button
        android:id="@+id/profileBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Profile"/>
    <Button
        android:id="@+id/lookForPartnerBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/lookforpartner_str"
        android:layout_below="@id/profileBtn"/>

    <Button
        android:id="@+id/whereToPlayBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/wheretoplay_str"
        android:layout_below="@id/lookForPartnerBtn"/>




</RelativeLayout>